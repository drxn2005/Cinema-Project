@using TaskMvcNewTampelt.Models
@model Movie
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "إضافة فيلم";
}
<h2 class="mb-3">إضافة فيلم</h2>

<form asp-area="Admin" asp-controller="Movie" asp-action="Create"
      method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label asp-for="ReleaseDate" class="form-label"></label>
            <input asp-for="ReleaseDate" type="date" class="form-control" />
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>
        <div class="col">
            <label class="form-label">التصنيف</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="col d-flex align-items-end">
            <div class="form-check">
                <input asp-for="Status" class="form-check-input" />
                <label asp-for="Status" class="form-check-label">فعال</label>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">الصورة الرئيسية</label>
        <input type="file" name="mainImage" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">صور إضافية</label>
        <input type="file" name="subImages" class="form-control" multiple />
    </div>

    <div class="mb-3">
        <label class="form-label">الممثلون</label>
        <select name="actorIds" asp-items="ViewBag.Actors" class="form-select" multiple></select>
        <div class="form-text">اضغط Ctrl/Shift لاختيار أكثر من ممثل.</div>
    </div>

    <button type="submit" class="btn btn-primary">حفظ</button>
    <a asp-area="Admin" asp-controller="Movie" asp-action="Index" class="btn btn-secondary">رجوع</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
