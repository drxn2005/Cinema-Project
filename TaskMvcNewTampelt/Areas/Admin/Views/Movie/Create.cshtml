@model TaskMvcNewTampelt.Models.Movie
@{
    ViewData["Title"] = ViewContext.RouteData.Values["action"]!.ToString() == "Create" ? "إضافة فيلم" : "تعديل فيلم";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@ViewContext.RouteData.Values["action"]" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label asp-for="ReleaseDate" class="form-label"></label>
            <input asp-for="ReleaseDate" type="date" class="form-control" />
        </div>
        <div class="col">
            <label class="form-label">التصنيف</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select"></select>
        </div>
        <div class="col form-check mt-4">
            <input asp-for="Status" class="form-check-input" />
            <label asp-for="Status" class="form-check-label">فعال</label>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">الصورة الرئيسية</label>
        <input type="file" name="mainImage" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.MainImg))
        {
            <img src="@Model.MainImg" style="height:90px" class="mt-2" />
        }
    </div>

    <div class="mb-3">
        <label class="form-label">صور إضافية</label>
        <input type="file" name="subImages" class="form-control" multiple />
    </div>

    <div class="mb-3">
        <label class="form-label">الممثلون</label>
        <select name="actorIds" asp-items="ViewBag.Actors" class="form-select" multiple></select>
    </div>

    <button class="btn btn-primary">حفظ</button>
    <a asp-action="Index" class="btn btn-secondary">رجوع</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
