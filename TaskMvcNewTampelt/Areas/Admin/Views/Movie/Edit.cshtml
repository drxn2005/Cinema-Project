@using TaskMvcNewTampelt.Areas.Admin.Domain
@model MovieEditDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "تعديل فيلم";
}

<h2 class="mb-3">تعديل فيلم</h2>

<form asp-area="Admin" asp-controller="Movie" asp-action="Edit"
      method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label asp-for="ReleaseDate" class="form-label"></label>
            <input asp-for="ReleaseDate" type="date" class="form-control" />
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>
        <div class="col">
            <label class="form-label">التصنيف</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="col d-flex align-items-end">
            <div class="form-check">
                <input asp-for="Status" class="form-check-input" />
                <label asp-for="Status" class="form-check-label">فعال</label>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">الصورة الرئيسية</label>
        <!-- لازم الاسم يطابق خاصية الـDTO -->
        <input type="file" name="MainImage" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ExistingMainImg))
        {
            <img src="@Model.ExistingMainImg" class="mt-2" style="height:90px" />
        }
    </div>

    <div class="mb-3">
        <label class="form-label">صور إضافية</label>
        <input type="file" name="SubImages" class="form-control" multiple />
        @* لو حابب تعرض الصور القديمة كمان، هاتها من الخدمة ومرّرها للـdto *@
    </div>

    <div class="mb-3">
        <label class="form-label">الممثلون</label>
        <!-- تقدر تستخدم asp-for أو name="ActorIds" -->
        <select asp-for="ActorIds" asp-items="ViewBag.Actors" class="form-select" multiple></select>
        <span class="form-text">استخدم Ctrl/Shift لاختيار أكثر من ممثل.</span>
    </div>

    <button type="submit" class="btn btn-primary">حفظ</button>
    <a asp-area="Admin" asp-controller="Movie" asp-action="Index" class="btn btn-secondary">رجوع</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
